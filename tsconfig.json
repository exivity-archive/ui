{
  "compilerOptions": {
    "lib": ["es6"],
    "outDir": "lib",
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "target": "es5",
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude":  [
    "node_modules",
    "**/*.test.ts?"
  ]
}
