{
  "name": "@exivity/ui",
  "version": "0.0.1",
  "description": "A collection of components to build interfaces",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/exivity/ui.git"
  },
  "keywords": [
    "exivity",
    "ui"
  ],
  "author": "Joram van den Boezem <joram@vandenboezem.nl>",
  "bugs": {
    "url": "https://github.com/exivity/ui/issues"
  },
  "homepage": "https://github.com/exivity/ui",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "lint": "standard src",
    "lint:fix": "standard src --fix",
    "test": "jest",
    "start": "start-storybook -p 6006",
    "build": "yarn build:clean && yarn build:dist && yarn build:docs",
    "build:clean": "rimraf dist && rimraf docs",
    "build:dist": "babel src --out-dir dist --source-maps --ignore \"src/**/*.stories.js\",\"src/**/*.test.js\"",
    "build:docs": "build-storybook -o docs",
    "publish:docs": "yarn build:clean && yarn build:docs && git add docs && git commit -m \"chore: update docs\" && git subtree push --prefix docs origin gh-pages",
    "prepublishOnly": "yarn lint && yarn test && yarn build"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^4.0.0-alpha.24",
    "@storybook/addon-info": "^4.0.0-alpha.24",
    "@storybook/addon-knobs": "^4.0.0-alpha.24",
    "@storybook/addon-links": "^4.0.0-alpha.24",
    "@storybook/addon-options": "^4.0.0-alpha.24",
    "@storybook/addons": "^4.0.0-alpha.24",
    "@storybook/react": "^4.0.0-alpha.24",
    "babel-core": "^7.0.0-bridge",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-styled-components": "^1.8.0",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.2.1",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-markdown": "^4.0.3",
    "react-syntax-highlighter": "^9.0.0",
    "react-test-renderer": "^16.5.2",
    "rimraf": "^2.6.2",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "color": "^3.1.0",
    "styled-components": "^4.0.0-beta.11.3"
  },
  "optionalDependencies": {
    "react-markdown": "^4.0.3",
    "react-syntax-highlighter": "^9.0.0"
  },
  "peerDependencies": {
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.stories.js"
    ],
    "setupTestFrameworkScriptFile": "./setupTest.js",
    "roots": [
      "<rootDir>/src/"
    ]
  }
}
