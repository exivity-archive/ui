{
  "name": "@exivity/ui",
  "version": "0.1.0",
  "description": "A collection of components to build interfaces",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/exivity/ui.git"
  },
  "keywords": [
    "exivity",
    "ui"
  ],
  "contributors": [
    "Joram van den Boezem <joram@vandenboezem.nl>"
  ],
  "bugs": {
    "url": "https://github.com/exivity/ui/issues"
  },
  "homepage": "https://github.com/exivity/ui",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "files": [
    "src",
    "docs",
    "lib"
  ],
  "scripts": {
    "create-component": "node scripts/create-component.js",
    "lint": "standard src",
    "lint:fix": "standard src --fix",
    "test": "jest",
    "copy:static": "rimraf docs/static && copyfiles --flat src/theme/font/* docs/static/font",
    "start": "yarn copy:static && start-storybook -p 6006 -s docs/static -c docs",
    "build": "yarn build:clean && yarn build:lib && yarn build:docs",
    "build:clean": "rimraf lib && rimraf docs/dist",
    "build:lib": "babel src --out-dir lib --source-maps --ignore \"src/**/*.stories.js\",\"src/**/*.test.js\"",
    "build:docs": "build-storybook -s docs/static -o docs/dist -c docs",
    "publish:docs": "git subtree push --prefix docs/dist origin gh-pages",
    "release": "bash scripts/release.sh"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@dr-kobros/react-webfont-loader": "^8.0.0",
    "@storybook/react": "^5.0.0-rc.2",
    "@types/jest": "^24.0.6",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-styled-components": "^1.8.0",
    "copyfiles": "^2.1.0",
    "husky": "^1.1.3",
    "jest": "^24.1.0",
    "jest-styled-components": "^6.2.1",
    "lint-staged": "^8.0.4",
    "prop-types": "^15.7.2",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-icons": "^3.2.1",
    "react-markdown": "^4.0.6",
    "react-syntax-highlighter": "^10.1.3",
    "react-test-renderer": "^16.8.2",
    "rimraf": "^2.6.2",
    "standard-version": "^4.4.0",
    "styled-components": "^4.1.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {},
  "optionalDependencies": {
    "@dr-kobros/react-webfont-loader": "^8.0.0",
    "react-icons": "^3.4.0",
    "react-markdown": "^4.0.6",
    "react-syntax-highlighter": "^10.1.3"
  },
  "peerDependencies": {
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "styled-components": "^4.1.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.stories.js",
      "!src/**/stories/*"
    ],
    "setupTestFrameworkScriptFile": "./setupTest.js",
    "roots": [
      "<rootDir>/src/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "standard --fix",
        "git add"
      ]
    },
    "ignore": [
      "docs/dist/**"
    ]
  }
}
