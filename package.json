  "scripts": {
    "lint": "tslint 'src/**/*.ts?'",
    "lint:fix": "tslint 'src/**/*.ts?' --fix",
    "start": "run-p docs test",
    "docs": "start-storybook -p 9009 -s public",
    "test": "react-scripts test",
    "test:update": "react-scripts test --update",
    "build": "yarn build:clean && yarn build:lib && yarn build:docs",
    "build:clean": "rimraf lib",
    "build:lib": "tsc",
    "build:docs": "build-storybook -s public",
    "publish:docs": "git subtree push --prefix docs origin gh-pages",
    "release": "bash scripts/release.sh"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "tslint --fix",
        "git add"
      ]
    },
    "ignore": []
  }
