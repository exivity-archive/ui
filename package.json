{
  "name": "@exivity/ui",
  "version": "0.2.5",
  "description": "A collection of components to build interfaces",
  "keywords": [
    "exivity",
    "ui"
  ],
  "homepage": "https://github.com/exivity/ui",
  "bugs": {
    "url": "https://github.com/exivity/ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/exivity/ui.git"
  },
  "license": "MIT",
  "contributors": [
    "Michiel de Vos <michiel_87@hotmail.com>",
    "Stefan Wullems <stefanwullems1998@gmail.com>",
    "Joram van den Boezem <joram@vandenboezem.nl>"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "module": "lib/index.js",
  "scripts": {
    "lint": "tslint 'src/**/*.ts?'",
    "lint:fix": "tslint 'src/**/*.ts?' --fix",
    "test": "cross-env CI=true react-scripts test --coverage",
    "test:watch": "react-scripts test",
    "test:update": "react-scripts test --update",
    "docs:watch": "start-storybook -p 9009 -c docs -s docs/public",
    "docs:build": "build-storybook -c docs -s docs/public -o docs/static",
    "docs:publish": "bash scripts/publish-docs.sh",
    "start": "run-p test:watch docs:watch",
    "build": "yarn lib:clean && yarn lib:build && yarn docs:build",
    "lib:clean": "rimraf lib",
    "lib:build": "node scripts/build-lib.js",
    "commit": "git-cz",
    "npm:publish": "bash scripts/publish-npm.sh",
    "version:bump": "yarn standard-version",
    "git:push": "git push --follow-tags origin master",
    "release": "bash scripts/release.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [],
    "linters": {
      "*.{ts,tsx}": [
        "tslint --fix",
        "git add"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!<rootDir>/src/**/*.stories.{ts,tsx}"
    ]
  },
  "dependencies": {
    "@dr-kobros/react-webfont-loader": "^8.0.0",
    "memoize-one": "^5.0.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@storybook/addon-actions": "^5.0.0-rc.3",
    "@storybook/addon-links": "^5.0.0-rc.3",
    "@storybook/addons": "^5.0.0-rc.3",
    "@storybook/cli": "^5.0.0-rc.3",
    "@storybook/react": "^5.0.0-rc.3",
    "@types/enzyme": "^3.1.18",
    "@types/enzyme-adapter-react-16": "^1.0.4",
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.6",
    "@types/memoize-one": "^4.1.0",
    "@types/react-icons": "^3.0.0",
    "@types/react-test-renderer": "^16.8.1",
    "@types/react-window": "^1.5.1",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/styled-components": "^4.1.10",
    "babel-loader": "^8.0.5",
    "codecov": "^3.2.0",
    "commitizen": "^3.0.7",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "faker": "^4.1.0",
    "husky": "^1.1.3",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.0.4",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-icons": "^3.4.0",
    "react-scripts": "2.1.5",
    "react-test-renderer": "^16.8.2",
    "react-window": "^1.5.2",
    "rimraf": "^2.6.2",
    "standard-version": "^4.4.0",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3"
  },
  "peerDependencies": {
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-icons": "^3.4.0"
  },
  "optionalDependencies": {
    "react-window": "^1.5.2"
  }
}
