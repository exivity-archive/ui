{
  "name": "@exivity/ui",
  "version": "0.1.0",
  "description": "A collection of components to build interfaces",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/exivity/ui.git"
  },
  "keywords": [
    "exivity",
    "ui"
  ],
  "contributors": [
    "Joram van den Boezem <joram@vandenboezem.nl>"
  ],
  "bugs": {
    "url": "https://github.com/exivity/ui/issues"
  },
  "homepage": "https://github.com/exivity/ui",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "files": [
    "src",
    "docs",
    "lib"
  ],
  "scripts": {
    "create-component": "node scripts/create-component.js",
    "ts": "tsc",
    "ts:watch": "tsc --watch",
    "lint": "tslint 'src/**/*.ts?'",
    "lint:fix": "tslint 'src/**/*.ts?' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest --update-snapshot",
    "build": "yarn build:clean && yarn build:compile && yarn build:docs",
    "build:clean": "rimraf lib",
    "build:compile": "yarn ts",
    "build:docs": "echo 'ui docs' > docs/README.md",
    "publish:docs": "git subtree push --prefix docs origin gh-pages",
    "release": "bash scripts/release.sh"
  },
  "devDependencies": {
    "@dr-kobros/react-webfont-loader": "^8.0.0",
    "@types/jest": "^24.0.6",
    "@types/react": "^16.8.3",
    "@types/react-test-renderer": "^16.8.1",
    "@types/styled-components": "^4.1.10",
    "husky": "^1.1.3",
    "jest": "^24.1.0",
    "jest-styled-components": "^7.0.0-2",
    "lint-staged": "^8.0.4",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-icons": "^3.4.0",
    "react-markdown": "^4.0.6",
    "react-syntax-highlighter": "^10.1.3",
    "react-test-renderer": "^16.8.2",
    "rimraf": "^2.6.2",
    "standard-version": "^4.4.0",
    "styled-components": "^4.1.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "optionalDependencies": {
    "@dr-kobros/react-webfont-loader": "^8.0.0",
    "react-icons": "^3.4.0",
    "react-markdown": "^4.0.6",
    "react-syntax-highlighter": "^10.1.3"
  },
  "peerDependencies": {
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "styled-components": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "tslint --fix",
        "git add"
      ]
    },
    "ignore": []
  }
}
